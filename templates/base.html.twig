<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;500;700&display=swap" rel="stylesheet"> 
        {% block stylesheets %}
            <link rel="stylesheet" href="/scss/style.css"
        {% endblock %}

    </head>
    <body>
        <section>
          <div class='color'></div>
                        <div class='color'></div>
                        <div class='color'></div>
                <nav class='navbar'>
                                <img src='/img/logo.png' class="logo">
                                {% if app.user %}
                                        {# Si l'utilisateur est authentifié #}
                                                <a class="btn " href="{{ path('home') }}">Page home</a>
                                                <a class="btn " href="{{ path('user_show', {"id":app.user.id}) }}">Profil</a>
                                        {% if is_granted('ROLE_ADMIN') %}
                                                {# Si l'utilisateur est authentifié et qu'il est admin #}
                                                <a class="btn " href="{{ path('index') }}">Page admin</a>
                                        {% endif %}
                                        <div>
                                                                                
                                                
                                                {% if app.user.getProfilPicture %}
                                                        <img src='/uploads/profilPicture/{{ app.user.profilPicture }}' class="profilPic">
                                                {% else %}
                                                        <img src='/img/profil.png' class="profilPic">
                                                {% endif %}
                                                <a class="btn " href="{{ path('app_logout') }}"><img src='/img/logout.png' class="profilPic"></a>
                                        </div>
                                {% else %}
                                        <div >
                                                <a class="btn" href="{{ path('user_new') }}">S'inscrire</a>
                                                <a class="btn" href="{{ path('app_login') }}">Se connecter</a>
                                        </div>
                                {% endif %}
                        </nav>
                        <div >
                                {% if message is defined %}
                                        <div class="alert ">
                                                {{ message }}
                                        </div>
                                {% endif %}
                                {% block body %}
                                {% endblock %}
                        </div>
                        
        </section>
        {% block javascripts %}
            <script
                src="https://code.jquery.com/jquery-3.5.1.min.js"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
                crossorigin="anonymous">
            </script>
            <script src="/js/script.js"></script>
        {% endblock %}
    </body>
</html>
