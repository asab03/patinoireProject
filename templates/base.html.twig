<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

    </head>
    <body>
        <nav >
                        <a >Menu</a>
                        {% if app.user %}
                                {# Si l'utilisateur est authentifié #}
                                        <a class="btn " href="{{ path('home') }}">Page home</a>
                                        <a class="btn " href="{{ path('user_show', {"id":app.user.id}) }}">Profil</a>
                                {% if is_granted('ROLE_ADMIN') %}
                                        {# Si l'utilisateur est authentifié et qu'il est admin #}
                                        <a class="btn " href="{{ path('index') }}">Page admin</a>
                                {% endif %}
                                <div>
                                        Bonjour {{ app.user.firstName }} <a class="btn " href="{{ path('app_logout') }}">Déconnexion</a>
                                </div>
                        {% else %}
                                <div>
                                        <a class="btn" href="{{ path('user_new') }}">S'inscrire</a>
                                        <a class="btn" href="{{ path('app_login') }}">Se connecter</a>
                                </div>
                        {% endif %}
                </nav>
                <div >
                        {% if message is defined %}
                                <div class="alert ">
                                        {{ message }}
                                </div>
                        {% endif %}
                        {% block body %}
                        {% endblock %}
                </div>
        {% block javascripts %}
            <script
                src="https://code.jquery.com/jquery-3.5.1.min.js"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
                crossorigin="anonymous">
            </script>
            <script src="/js/script.js"></script>
        {% endblock %}
    </body>
</html>
