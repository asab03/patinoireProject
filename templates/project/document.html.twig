{% extends 'base.html.twig' %}

{% block title %}{{project.title}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class='container4'>
    <div class='tableShow '>
        <div class="example-wrapper">
        <h1>Les documents de {{ project.title }} ! </h1>
        
            <div class="row">
                <div class="column">
                    <table class="u-full-width">
                        <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Date</th> 
                                <th>Document</th>
                                <th>Supprimer</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for document in project.getDocuments %}
                            <tr class='formline'>
                                
                                <td>{{ document.getTitle }}</td>
                                <td>{{ document.getDate|date("d/m/Y") }}</td>
                                <td><a href="{{ path('project_document_show', {'id': project.id, 'doc_id': document.id}) }}" >Voir</a></td>
                                <td><a href="{{ path('document_delete', {"id":project.id, "document_id":document.id})}}" class="btnRed">Supprimer</a></td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                
            </div>
            <div class="logdivbtn">
                <a class="button button-primary greenBtn" href="{{ path('projects_addDocument', {'id': project.id}) }}">Ajouter</a>
                <a class="button button-primary back" href="{{ path('project_show', {'id': project.id}) }}">Retour</a>
            </div>
        
        </form>

        </div>  
    </div>
</div>
{% endblock %}
