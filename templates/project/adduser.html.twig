{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ app.user.firstName }} ! ✅</h1>
    <form action="/project/{{ project.getId }}/user/save" method="POST">
        <div class="row">
            <div class="column">
                <table class="u-full-width">
                    <thead>
                        <tr>
                            <th>Select</th>
                            <th>Prénom</th>
                            <th>Nom</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td>
                                <input type="checkbox" {% if projectUsers.contains(user) %} checked {% endif %} value={{ user.getId }} id="{{ user.getId }}" name="user_id[]">
                            </td>
                            <td>{{ user.getFirstName }}</td>
                            <td>{{ user.getLastName }}</td>
                            <td>{{ user.getEmail }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
      <a class="button button-primary" href="{{ path('project_show', {'id': project.id}) }}">Cancel</a>
      <input class="button-primary" type="submit" value="Save">
    </form>

   
</div>
{% endblock %}
