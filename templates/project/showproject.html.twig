{% extends 'base.html.twig' %}

{% block title %}{{ project.title}}{% endblock %}

{% block body %}
<div class='container4'>
    <div class='tableShow'>
    <h1>{{ project.Title }}</h1>

    <table class="table">
        <tbody>
                      
           
            <tr>
                <th>Description</th>
                <td>{{ project.Description }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{project.getDateIn|date("d M Y")}}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ project.getDateOut|date("d M Y") }}</td>
            </tr>
            
        </tbody>
    </table>
    <div>

    <a href="{{ path('project_edit', {'id': project.id}) }}">Modifier</a>
    <a href="{{ path('projects_addUser', {'id': project.id}) }}">Ajouter participant</a>
    </div>
    <div class="userprojectPic">
        {% for user in project.user %}
             {% if user.getProfilPicture %}
                    <img src='/uploads/profilPicture/{{ user.profilPicture }}' class="profilPic">
                {% else %}
                    <img src='/img/profil.png' class="profilPic">
                {% endif %}
        {% endfor %}
    </div>
    <div class="fonctionnalité">
        <div class='fct'>
        <h3>Depot de documents</h3>
        <a href="{{ path('projects_document', {'id': project.id}) }}"><img src='/img/docs.png' class="fctPic"></a>
        </div>
        <div class='fct'>
        <h3>Dépenses</h3>
        <a href="{{ path('projects_expense', {'id': project.id}) }}"><img src='/img/calculator.png' class="fctPic"></a>
        </div>
        <div class='fct'>
        <h3>Messagerie</h3>
        <a href="{{ path('project_discussion', {'id': project.id, 'disc_id':discussion.id}) }}"><img src='/img/chat.png' class="fctPic"></a>
        </div>
    </div>

  </div>  
</div>
{% endblock %}
