{% extends 'base.html.twig' %}

{% block title %}Edit Project{% endblock %}

{% block body %}
    <h1>Edit Project</h1>

    <form action="/project/save/{{projectId}}" method="POST">
      <div class="row">
        <div class="column">
          <label for="title">Titre</label>
          <input class="u-full-width input" type="text" id="title" name="title" value="{{project.getTitle}}">
        </div>
      </div>
      <div class="row">
        <div class="column">
          <label for="description">Description</label>
          <input class="u-full-width input" type="text" id="description" name="description" value="{{project.getDescription}}">
        </div>
      </div>
      <div class="row">
        <div class="column">
          <label for="date_in">Start date</label>
          <input class="u-full-width input" type="date" id="date_in" name="date_in" placeholder="jj/mm/aaaa" value="{{project.getDateIn|date("Y-m-d")}}">
        </div>
      </div>
      <div class="row">
        <div class="column">
          <label for="date_out">End date</label>
          <input class="u-full-width input" type="date" id="date_out" name="date_out" placeholder="jj/mm/aaaa" value="{{project.getDateOut|date("Y-m-d")}}">
          
        </div>
      </div>
      
      
      <input class="button-primary" type="submit" value="Save">
      <a href="{{ path('project_delete', {"id":project.id})}}"  class="button btnDelete">Delete</a>
      <a class="button btnCancel" href="{{ path('project_show', {'id': project.id}) }}">Cancel</a>
    </form>

    

    
{% endblock %}
