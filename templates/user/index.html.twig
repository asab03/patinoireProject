{% extends 'base.html.twig' %}

{% block title %}Administrateur{% endblock %}

{% block body %}
<div>
    <h2>Liste des Utilisateurs</h2>

    <table class="tableAdmin">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Profil_picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.profilPicture }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">Voir</a>
                    {{ include('user/_delete_form.html.twig') }}
                    {#<a href="{{path("admin_mail_send")}}"> Email</a>#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun utilisateurs trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Nouvel utilisateur</a>
    </div>
    <div>
        <h2>Liste des Projets</h2>

        <table class="tableAdmin">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date de debut</th>
                <th>Date de Fin</th>
                
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.title }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.getDateIn|date("d-M-Y")}}</td>
                <td>{{ project.getDateOut|date("d-M-Y") }}</td>
                
                <td>
                    <a href="{{ path('project_show', {'id': project.id}) }}">Voir</a>
                    <a href="{{ path('project_delete', {'id': project.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun projets trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
